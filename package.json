{
    "$schema": "./node_modules/ng-packagr/package.schema.json",
    "name": "@ht14x/light-mapper",
    "version": "1.1.16",
    "description": "Lightweight typescript object mapper",
    "ngPackage": {
        "lib": {
            "entryFile": "src/index.ts"
        }
    },
    "main": "./lib/index.js",
    "scripts": {
        "build": "rimraf dist && ng-packagr -p package.json",
        "playground": "rimraf dist && tsc-watch -p tsconfig.playground.json --onSuccess \"node ./dist/playground.js\""
    },
    "files": [
        "lib",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/HT14X/light-mapper.git"
    },
    "keywords": [
        "mapper",
        "object mapper",
        "light",
        "light-mapper",
        "typescript"
    ],
    "author": "Hajek Jiri <hajekj14@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/HT14X/light-mapper/issues"
    },
    "homepage": "https://github.com/HT14X/light-mapper#readme",
    "devDependencies": {
        "@angular/compiler": "^12.2.0",
        "@angular/compiler-cli": "^12.2.0",
        "@angular/core": "^12.2.0",
        "ng-packagr": "^16.2.3",
        "rimraf": "^3.0.2",
        "tsc-watch": "^4.4.0",
        "typescript": "^4.3.5"
    },
    "peerDependencies": {
        "reflect-metadata": "^0.1.13"
    }
}
